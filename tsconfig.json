{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "out",
    "rootDir": ".",               
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["src/**/*", "main.ts"]
}
